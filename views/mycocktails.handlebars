<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Cocktails</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
        background-color: #1a1a1a;
        color: #f5f5f5;
        font-family: 'Roboto', Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        font-weight: 700;
        margin: 20px 0;
    }

    #search {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        background-color: #282828;
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    #search-input {
        padding: 10px;
        border-radius: 25px;
        border: 1px solid #ddd;
        width: 50%;
        max-width: 500px;
        margin-right: 10px;
        outline: none;
        transition: border 0.3s;
    }

    #search-input:focus {
        border-color: #008CBA;
    }

    #search-button {
        background-color: #008CBA; /* Blue */
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.4s;
    }

    #search-button:hover {
        background-color: white; 
        color: #008CBA; 
        border: 2px solid #008CBA;
    }

    #cocktails {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    .cocktail {
        background-color: #333;
        border: 1px solid #444;
        border-radius: 8px;
        width: 300px;
        margin: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px 0 hsla(0, 0%, 0%, 0.2);
        transition: all 0.3s ease-in-out;
    }

    .cocktail:hover {
        box-shadow: 0 8px 16px 0 hsla(0, 0%, 0%, 0.2);
        transform: translateY(-5px);
    }

    .cocktail h2 {
        margin: 0 0 10px 0;
        color: #f5f5f5;
        font-size: 1.2em;
    }

    .cocktail p {
        margin: 5px 0;
        color: #aaa;
        font-size: 0.9em;
    }

    .cocktail img {
        width: 100%;
        border-radius: 8px;
        margin: 10px 0;
    }

    .add-cocktail {
        background-color: #008CBA; /* Blue */
        border: none;
        color: white;
        padding: 10px;
        text-align: center;
        text-decoration: none;
        display: block;
        font-size: 14px;
        margin: 15px 0 0 0;
        cursor: pointer;
        border-radius: 25px;
        transition: all 0.4s;
    }

    .add-cocktail:hover {
        background-color: white; 
        color: #008CBA; 
        border: 2px solid #008CBA;
    }

    @media (max-width: 600px) {
        #search-input {
            width: 70%;
        }
    }
  </style>
</head>
<body>
  <h1>My Cocktails</h1>
  <div id="search">
    <input type="text" id="search-input" placeholder="Search for a cocktail">
    <button id="search-button">Search</button>
  </div>
  <div id="cocktails">
    {{#if cocktails.length}}
      <ul>
        {{#each cocktails}}
          <li class="cocktail">
            <h2>{{this.name}}</h2>
            <img src="{{this.thumbnail}}" alt="{{this.name}}">
            <p><strong>Category:</strong> {{this.category}}</p>
            <p><strong>Instructions:</strong> {{this.instructions}}</p>
            <ul>
              {{#each this.ingredients}}
                <li>{{this.ingredient}} - {{this.measure}}</li>
              {{/each}}
            </ul>
            <button class="add-cocktail" data-cocktail="{{this.name}}">Add to my cocktails</button>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No cocktails found.</p>
    {{/if}}
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('search-button').addEventListener('click', async () => {
        const searchInput = document.getElementById('search-input').value;
        if (searchInput) {
          window.location.replace('/cocktails/' + searchInput);
        }
      });
      document.querySelectorAll('.add-cocktail').forEach(button => {
        button.addEventListener('click', event => {
          const cocktailName = event.target.dataset.cocktail;
          alert('Adding ' + cocktailName + ' to your cocktails!');
          // Here you can add code to handle adding the cocktail to your collection
        });
      });
    });
  </script>
</body>
</html>
